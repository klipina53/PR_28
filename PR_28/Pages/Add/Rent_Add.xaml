<Page x:Class="PR_28.Pages.Add.Rent_Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR_28.Pages.Add"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Rent_Add">

    <Grid Background="#ff526f">
        <Border Height="60" VerticalAlignment="Top" Background="White">
            <Grid>
                <Label x:Name="lab" Content="Добавить аренду игровых компьютеров" Height="50" HorizontalContentAlignment="Center" FontSize="25" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="20,0,0,0" Foreground="#ff99aa" FontWeight="Bold"/>
                <Border CornerRadius="7" Background="#ff99aa" Height="40" Width="100" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0" MouseDown="Back_Click">
                    <Label Content="Назад" Height="30" FontSize="15" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
        <Grid Margin="0,70,0,0">
            <Label Content="Компьютерный клуб" Height="35" FontSize="18" Foreground="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0"/>
            <Border CornerRadius="7" Background="White" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,55,0,0" Width="350">
                <ComboBox x:Name="name" FontSize="16" Background="Transparent" Margin="3"/>
            </Border>
            <Label Content="Дата и время (yyyy-MM-dd HH:mm)" Height="35" FontSize="18" Foreground="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,100,0,0"/>
            <Border CornerRadius="7" Background="White" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,135,0,0" Width="350">
                <TextBox x:Name="datetime" FontSize="16" Background="Transparent" BorderBrush="Transparent"/>
            </Border>
            <Label Content="ФИО клиента" Height="35" FontSize="18" Foreground="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,180,0,0"/>
            <Border CornerRadius="7" Background="White" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,215,0,0" Width="350">
                <TextBox x:Name="fio" FontSize="16" Background="Transparent" BorderBrush="Transparent"/>
            </Border>
            <Border CornerRadius="7" Background="#ff99aa" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,20" Width="100" MouseDown="Add_Click">
                <Label x:Name="lb" Content="Добавить" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="SemiBold" FontSize="16" Background="Transparent" BorderBrush="Transparent"/>
            </Border>
        </Grid>
    </Grid>
</Page>
